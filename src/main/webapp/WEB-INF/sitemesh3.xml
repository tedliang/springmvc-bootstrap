<?xml version="1.0" encoding="UTF-8"?>

<sitemesh>
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <mapping path="/about.jsp" exclue="true"/>
    <mapping path="/birtreport/*" exclue="true"/>

    <mapping path="/*" decorator="/WEB-INF/decorators/main-layout.jsp"/>

    <content-processor>
        <tag-rule-bundle class="org.springframework.sitemesh.JavaScriptTagRuleBundle" />
    </content-processor>
</sitemesh>